{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "baseUrl": "./src/server/", // all paths are relative to the baseUrl
    "paths": {
      "*": ["types/*"],
      "@server/*": ["src/server/app/modules/*"],
      "@services/*": ["src/client/shared/services/*"],
      "@components/*": ["src/client/web/app/common/components/*"],
      "@model/*": ["src/client/web/app/common/model/*"],
      "@config/*": ["src/client/web/app/common/config/*"],
      "@utils/*": ["src/client/shared/utils/*"],
      "@containers/*": ["src/client/web/app/containers/*"],
      "@styles/*": ["src/client/web/app/common/styles/*"]
    },
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "esModuleInterop": true,
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "esnext.asynciterable"
    ],
    "outDir": "docker/backend/prod/dist"
  },
  "include": [
    "src/client/**/*",
    "src/client/**/**/*",
    "src/client/**/**/**/*",
    "src/client/**/**/**/**/*",
    "src/client/**/**/**/**/**/*",
    "src/server/**/*",
    "src/server/**/**/*",
    "src/server/**/**/**/*",
    "src/server/**/**/**/**/*",
    "src/server/**/**/**/**/**/*",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}